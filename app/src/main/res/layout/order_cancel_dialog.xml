<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_whitelogout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:gravity="center"
            android:text="Are you sure you want to Cancel the Order?"
            android:textColor="@color/colorBalck"
            android:textSize="16sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:weightSum="2">

            <Button
                android:id="@+id/yesButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:letterSpacing="0.1"
                android:text="Yes"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@color/colorPrimary" />

            <Button
                android:id="@+id/noButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/storke_green_button"
                android:backgroundTint="@android:color/white"

                android:letterSpacing="0.1"
                android:text="No"
                android:textAllCaps="true"
                android:textColor="@color/colorBalck"
                android:textSize="14sp"
                android:textStyle="bold"
                app:strokeColor="@color/colorGrey"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>